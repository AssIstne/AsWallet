<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/ripple_list_item_bg">
    <TextView
        android:id="@+id/list_item_edit_tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="72dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_list_item"
        tools:text="TAG"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/list_item_edit_tag_switch"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/material_margin_16"
        android:checked="true"
        />

    <CheckBox
        android:id="@+id/list_item_edit_tag_cbx_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/material_margin_16"
        android:button="@drawable/selector_cbx"
        android:buttonTint="@color/selector_cbx_tint"
        android:checked="false"
        android:visibility="gone"
        />
</RelativeLayout>